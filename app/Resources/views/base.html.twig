<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Blog Admin | {% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        {% block styles %}
            <link rel="stylesheet" type="text/css" href="{{asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css')}}" />
            <!-- MetisMenu CSS -->
            <link href="{{asset('assets/vendor/metisMenu/dist/metisMenu.min.css')}}" rel="stylesheet">

            <!-- Timeline CSS -->
            <link href="{{asset('bundles/blogbundle/css/timeline.css')}}" rel="stylesheet">

            <!-- Custom CSS -->
            <link href="{{asset('bundles/blogbundle/css/sb-admin-2.css')}}" rel="stylesheet">

            <!-- Morris Charts CSS -->
            <link href="{{asset('assets/vendor/morrisjs/morris.css')}}" rel="stylesheet">

            <!-- Custom Fonts -->
            <link href="{{asset('assets/vendor/font-awesome/css/font-awesome.min.css')}}" rel="stylesheet" type="text/css">
            <style type="text/css">
            .no-bullets {
                list-style: none;
            }
            </style>
        {% endblock %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        
        {% endblock %}
        {% block scripts %}
        <script src="{{asset('assets/vendor/jquery/dist/jquery.min.js')}}"></script>
        <script src="{{asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js')}}"></script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div style="padding: 5%">
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
