{% extends 'base_front.html.twig' %}

{% block content %}
<div class="panel panel-default col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2" style="margin-top:5%">
	<div class="panel-heading">
        <i class="fa fa-clock-o fa-fw"></i> Posts
    </div>
    <div class="panel-body">
		<ul class="timeline">

		{% for post in posts %}
			<li class="{% if loop.index%2 == 0 %}timeline-inverted{% endif %}">
				<div class="timeline-badge"><i class="fa fa-check"></i></div>
				<div class="timeline-panel">
					<div class="timeline-heading">
                        <a href="{{path("post_view", {'post_id': post.id})}}"><h4 class="timeline-title">{{ post.title }}</h4></a>
                        <p><small class="text-muted"><i class="fa fa-clock-o"></i> {{post.createdAt|date}}</small>
                        </p>
                    </div>

					<div class="timeline-body">			
						{% include 'BlogBundle:common:post_comments.html.twig' with {'comments': post.comments} %}
					</div>
				</div>
			</li>
		{% endfor %}
		</ul>
	</div>
</div>
{% endblock %}
